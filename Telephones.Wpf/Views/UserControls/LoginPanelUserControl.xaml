<UserControl x:Class="Telephones.Wpf.Views.UserControls.LoginPanelUserControl"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="400" Height="85">
    <Grid x:Name="LayoutRoot" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding UserData}"/>
        <Button Content="{Binding BtnName}" Margin="5" Grid.Row="1" Command="{Binding LoginOrLogoutCommand}"/>
    </Grid>
</UserControl>
